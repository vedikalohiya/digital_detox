  Widget _buildTimerModeButton(BuildContext context) {
    return Center(
      child: ElevatedButton(
        onPressed: () async {
          // Check if timer is already active
          final kidsModeService = KidsModeService();
          await kidsModeService.initialize();
          
          if (kidsModeService.isActive) {
            // Timer already active, go to timer screen
            Navigator.of(context).pushReplacement(
              MaterialPageRoute(builder: (context) => const KidsTimerScreen()),
            );
          } else {
            // No active timer, go to setup screen
            Navigator.of(context).push(
              MaterialPageRoute(builder: (context) => const KidsModeSetup()),
            );
          }
        },
        style: ElevatedButton.styleFrom(
          backgroundColor: Colors.deepPurple,
          padding: EdgeInsets.symmetric(horizontal: 40, vertical: 18),
          shape: RoundedRectangleBorder(
            borderRadius: BorderRadius.circular(30),
          ),
          elevation: 10,
          shadowColor: Colors.deepPurple.withOpacity(0.5),
